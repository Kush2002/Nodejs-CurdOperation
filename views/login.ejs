<body style="background-image: url('/img/bg.jpg');">
    <div class="container px-4 py-5 mx-auto">
                <div class="card card1">
                    <div class="row justify-content-center my-auto">
                        <div class="col-md-8 col-10 my-5">
                            <h3 class="mb-5 text-center heading"><%= text%></h3>
                            <form id="form">
                            <div class="form-group">
                                <label class="form-control-label text-muted" for="username">Username</label>
                                <input type="text" id="username" name="username" placeholder="User Name" id="email" class="form-control" required>
                            </div>
                            <br>
                            <div class="form-group">
                                <label class="form-control-label text-muted" for="password">Password</label>
                                <input type="password" id="password" name="password" placeholder="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{12,}" title="Please Enter Strong Password and '12 chart'"  class="form-control" required>
                                <div class="showpassword_box"><input type="checkbox" id="checkbox">  Show password</div>
                            </div>
                            <div class="row justify-content-center my-3 px-4">
                                <button class="btn btn-primary" type="submit">Login</button>
                            </div>
                        </form>
                        </div>
                    </div>
                </div>
    </div>
    <script>
        let password = document.getElementById("password");
        let checkbox = document.getElementById("checkbox");
        checkbox.onclick = function(){
            if (checkbox.checked) {
                password.type = "text";
            }else{
                password.type = "password";
            }
        }
    </script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios@1.6.7/dist/axios.min.js"></script>
